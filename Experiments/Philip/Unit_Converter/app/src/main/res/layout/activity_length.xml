<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Length">

    <Spinner
        android:id="@+id/spinner_L2"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignStart="@+id/spinner_L1"
        android:layout_alignTop="@+id/Output"
        android:layout_alignBottom="@+id/Output"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        android:entries="@array/length_array"
        android:spinnerMode="dropdown" />

    <TextView
        android:id="@+id/Output"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/Input"
        android:layout_alignStart="@+id/Input"
        android:layout_alignEnd="@+id/Input"
        android:layout_marginStart="0dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="0dp"
        android:background="@android:color/background_light"
        android:ems="10"
        android:importantForAutofill="no"
        android:inputType="none" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="165dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="188dp"
        android:text="@string/textview_length" />

    <EditText
        android:id="@+id/Input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="27dp"
        android:layout_marginTop="244dp"
        android:ems="10"
        android:importantForAutofill="no"
        android:inputType="number" />

    <Spinner
        android:id="@+id/spinner_L1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/Input"
        android:layout_alignBottom="@+id/Input"
        android:layout_marginStart="15dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        android:layout_toEndOf="@+id/Input"
        android:entries="@array/length_array"
        android:spinnerMode="dropdown" />

    <Button
        android:id="@+id/Convert_Button"
        android:layout_width="wrap_content"
        android:layout_height="83dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="487dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="65dp"
        android:text="@string/Convert_Button" />

</RelativeLayout>